<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >
            <ImageView
                android:id="@+id/login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                >

            </ImageView>
            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/login_image"
                android:hint="Email..."
                android:background="@drawable/inputs"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:drawableStart="@drawable/email"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="25dp"
                >

            </EditText>
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/login_email"
                android:hint="Password..."
                android:background="@drawable/inputs"
                android:inputType="textPassword"
                android:padding="5dp"
                android:drawableStart="@drawable/password"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                >

            </EditText>
            <TextView
                android:id="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/login_password"
                android:text="Forget Password?"
                android:layout_centerHorizontal="true"

                android:layout_marginRight="23dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                >

            </TextView>

            <Button
                android:id="@+id/login_button"
                android:layout_below="@+id/forget_password_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="4dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="24dp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/button">

            </Button>
            <TextView
                android:id="@+id/need_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/login_button"
                android:text="Need new Account?"
                android:layout_centerHorizontal="true"

                android:layout_marginRight="23dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                >

            </TextView>
            <TextView
                android:id="@+id/login_using"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/need_new_account"
                android:text="or Login using your"
                android:layout_centerHorizontal="true"

                android:layout_marginRight="23dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"

                >

            </TextView>
            <Button
                android:id="@+id/phone_login"
                android:layout_below="@+id/login_using"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="19dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="4dp"
                android:text="Phone Number"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/button"
                android:drawableStart="@drawable/phone">

            </Button>



        </RelativeLayout>

    </ScrollView>
</RelativeLayout>